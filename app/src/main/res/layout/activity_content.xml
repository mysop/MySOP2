<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"

    tools:context="com.example.kelly.mysop.Content"
    android:weightSum="1">

    <ScrollView android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="176dp">

                <ImageView
                    android:layout_width="128dp"
                    android:layout_height="189dp"
                    android:id="@+id/content_picture"
                    android:src="@drawable/test"
                    android:paddingTop="30dp"
                    android:paddingBottom="30dp" />

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="163dp"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="204dp"
                        android:layout_height="wrap_content"
                        android:text="Title"
                        android:textSize = "34dp"
                        android:id="@+id/content_title"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="35dp"
                        android:textColor="#f80d0410" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="20150803_1"
                        android:id="@+id/content_sopnumber"
                        android:layout_marginLeft="20dp" />

                    <TextView
                        android:layout_width="204dp"
                        android:layout_height="wrap_content"
                        android:text="Master"
                        android:textSize="14dp"
                        android:id="@+id/content_master"
                        android:layout_marginLeft="20dp"
                        android:textIsSelectable="false"
                        android:linksClickable="false" />

                    <Button
                        android:layout_width="210dp"
                        android:layout_height="40dp"
                        android:text="加入清單"
                        android:id="@+id/button4"
                        android:textColor="#ffffffff"
                        android:background="#ffff3f2f"
                        android:layout_marginBottom="46dp"
                        android:onClick="login_check"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:typeface="serif"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="102dp"
                android:layout_marginLeft="0dp"
                android:weightSum="1">

                <TextView
                    android:layout_width="122dp"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="160"
                    android:id="@+id/download"
                    android:background="@drawable/redball"
                    android:gravity="center_vertical"
                    android:textSize="30dp"
                    android:password="false"
                    android:phoneNumber="false"
                    android:singleLine="false"
                    android:paddingLeft="37dp"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:layout_width="122dp"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="3.8"
                    android:id="@+id/star"
                    android:background="@drawable/redball"
                    android:gravity="center_vertical"
                    android:textSize="30dp"
                    android:paddingLeft="37dp"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:layout_width="122dp"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="人工啟動"
                    android:id="@+id/category"
                    android:background="@drawable/redball"
                    android:textSize="40dp"
                    android:textColor="#FFFFFF"
                    android:gravity="center_vertical|center_horizontal" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="10dp"
                android:id="@+id/getrating">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="下載次數"
                    android:id="@+id/downloadtext"
                    android:layout_marginLeft="20dp"
                    android:textColor="#7B7B7B" />

                <RatingBar
                    android:id="@+id/ratingBar"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:stepSize="0.1"
                    android:layout_marginLeft="10dp"
                    android:rating="3.8"
                    android:progressDrawable="@drawable/starbar" />

                <TextView
                    android:layout_width="122dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="啟動規則"
                    android:id="@+id/categorytext"
                    android:textColor="#7B7B7B"
                    android:layout_marginLeft="30dp" />
            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:id="@+id/horizontalScrollView" >

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    >

                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="fill_parent"
                        android:id="@+id/imageView8"
                        android:src="@drawable/test1" />

                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="fill_parent"
                        android:id="@+id/imageView10"
                        android:src="@drawable/test2" />

                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="fill_parent"
                        android:id="@+id/imageView11"
                        android:src="@drawable/test3" />

                </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="subtitle"
                    android:id="@+id/content_subtitle"
                    android:textSize="30dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A one-of-a-kind destination where our rarest coffees are small-batch roasted, packaged and enjoyed. It may be a labor of love, but it’s mostly love.\nOur coffee masters have distilled their years of tasting knowledge down to three simple questions to help you find a coffee you’re sure to love."
                    android:id="@+id/content_text"
                    android:textSize="20dp"
                    android:background="@drawable/context_linear"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/commentlayout">

 <!--               <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/commentlayout1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Username"
                        android:id="@+id/Username"
                        android:layout_marginTop="20dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lorem ipsum dolor sit amet, consect elity.J'aime la chien et la chat.I li y le garcon.Qui!"
                        android:id="@+id/textView12" />

              </LinearLayout>
 -->                 <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textAppearance="?android:attr/textAppearanceLarge"
                       android:text="評論"
                       android:id="@+id/textView8"
                       android:layout_marginTop="20dp" />

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/inputText"
                    android:singleLine="true"
                    />

                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:id="@+id/ratingBar2"
                    android:progressDrawable="@drawable/starbar" />/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="送出"
                    android:id="@+id/button5"
                    android:onClick="writeCommon" />

                <ListView
                    android:layout_width="fill_parent"
                    android:layout_height="350dp"
                    android:id="@+id/listInputText"
                    >
                </ListView>
            </LinearLayout>

        </LinearLayout>


    </ScrollView>


</LinearLayout >
