<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"

    tools:context="com.example.kelly.mysop.Content"
    android:weightSum="1">

    <ScrollView android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="206dp"
                android:layout_weight="0.62">

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:id="@+id/content_picture"
                    android:src="@drawable/test"
                    android:paddingTop="30dp"
                    android:paddingBottom="30dp" />

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="204dp"
                        android:layout_height="wrap_content"
                        android:text="星巴克收藏好市多"
                        android:textSize = "30dp"
                        android:id="@+id/content_title"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="35dp"
                        android:textColor="#f80d0410" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="sopnumber"
                        android:id="@+id/content_sopnumber"
                        android:layout_marginLeft="20dp"
                        android:textColor="#ff010105" />

                    <TextView
                        android:layout_width="204dp"
                        android:layout_height="wrap_content"
                        android:text="Master"
                        android:textSize="14dp"
                        android:id="@+id/content_master"
                        android:layout_marginLeft="20dp"
                        android:textIsSelectable="false"
                        android:linksClickable="false"
                        android:textColor="#82262626" />

                    <Button
                        android:layout_width="185dp"
                        android:layout_height="40dp"
                        android:text="加入清單"
                        android:id="@+id/button4"
                        android:textColor="#ffffffff"
                        android:background="#ffff3f2f"
                        android:layout_marginBottom="46dp"
                        android:onClick="addtolist"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:textSize="23dp"
                        android:textStyle="bold"
                        android:typeface="serif"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="102dp"
                android:layout_marginLeft="0dp"
                android:weightSum="1">

                <TextView
                    android:layout_width="122dp"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="160"
                    android:id="@+id/download"
                    android:background="@drawable/redball"
                    android:gravity="center_vertical|center_horizontal"
                    android:textSize="30dp"
                    android:password="false"
                    android:phoneNumber="false"
                    android:singleLine="false"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:layout_width="122dp"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="20"
                    android:id="@+id/star"
                    android:background="@drawable/redball"
                    android:gravity="center_vertical|center_horizontal"
                    android:textSize="30dp"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:layout_width="122dp"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="無"
                    android:id="@+id/category"
                    android:background="@drawable/redball"

                    android:gravity="center_vertical|center_horizontal"
                    android:textSize="20dp"
                    android:textColor="#FFFFFF" />

                    android:textSize="20dp"
                    android:textColor="#FFFFFF"
                    android:gravity="center_vertical|center_horizontal" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:id="@+id/getrating">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="收藏量"
                    android:id="@+id/downloadtext"
                    android:layout_marginLeft="20dp"
                    android:textColor="#7B7B7B" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="下載量"
                    android:id="@+id/textView18"
                    android:layout_marginLeft="35dp"
                    android:textColor="#7B7B7B" />

                <TextView
                    android:layout_width="122dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="啟動規則"
                    android:id="@+id/categorytext"
                    android:textColor="#7B7B7B"
                    android:layout_marginLeft="20dp" />
            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/horizontalScrollView"
                android:scrollbars="none"
                android:visibility="gone"
                android:fillViewport="false"
                android:layout_gravity="top">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:id="@+id/graph1"
                        android:src="@drawable/test1"
                        android:scaleType="fitXY"
                        android:layout_margin="2dp"
                        android:background="#ff3455ff"
                        android:visibility="gone" />

                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:id="@+id/graph2"
                        android:src="@drawable/test2"
                        android:scaleType="fitXY"
                        android:layout_margin="2dp"
                        android:visibility="gone" />

                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:id="@+id/graph3"
                        android:src="@drawable/test3"
                        android:scaleType="fitXY"
                        android:layout_margin="2dp"
                        android:visibility="gone" />

                </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/hh">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="subtitle"
                    android:id="@+id/content_subtitle"
                    android:textSize="30dp"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A one-of-a-kind destination where our rarest coffees are small-batch roasted, packaged and enjoyed. It may be a labor of love, but it’s mostly love.\nOur coffee masters have distilled their years of tasting knowledge down to three simple questions to help you find a coffee you’re sure to love."
                    android:id="@+id/content_text"
                    android:textSize="20dp"
                    android:background="@drawable/context_linear"
                    android:paddingLeft="3dp" />


            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/commentlayout">

                <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textAppearance="?android:attr/textAppearanceLarge"
                       android:text="評論"
                       android:id="@+id/textView8"
                       android:layout_marginTop="20dp" />

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/inputText"
                    android:singleLine="true"
                    android:linksClickable="false" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/like"
                    android:src="@drawable/unlike"
                    android:onClick="onlike" /><![CDATA[

                />

                ]]>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="送出"
                    android:id="@+id/button5"
                    android:onClick="writeCommon" />

                <ListView
                    android:layout_width="fill_parent"
                    android:layout_height="350dp"
                    android:id="@+id/listInputText"
                    android:scrollbars="none"
                    >
                </ListView>
            </LinearLayout>

        </LinearLayout>


    </ScrollView>


</LinearLayout >
