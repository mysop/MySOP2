<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.mysop.myapplication.emailverify"
    android:orientation="vertical">

    <TextView android:text="驗證碼" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="63dp"
        android:id="@+id/verify_title"
        android:textSize="45dp"
        android:textColor="#ff6347"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MySOP將發一封驗證信給您，請到您的信箱，收到驗證信後，輸入信中的驗證碼，如果您沒有收到我們的信件，請按「重寄」，我們會寄一封新的給您，或是按確認以回到登入頁。"
        android:id="@+id/textView3"
        android:textSize="18dp"
        android:layout_marginTop="46dp"
        android:layout_below="@+id/verify_title"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="確認"
        android:id="@+id/submit2"
        android:background="#ffff3f2f"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:layout_alignTop="@+id/button3"
        android:layout_alignEnd="@+id/textView3" />

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="重寄"
        android:id="@+id/button3"
        android:background="#ffff3f2f"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="61dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText3"
        android:textSize="18dp"
        android:hint="輸入驗證碼"
        android:singleLine="false"
        android:gravity="center"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="39dp"
        android:layout_alignEnd="@+id/textView3"
        android:layout_alignParentStart="true" />

</RelativeLayout>