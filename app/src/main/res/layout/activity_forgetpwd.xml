<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.kelly.mysop.Forgetpwd" android:focusableInTouchMode="true"
    android:background="#ffffffff">
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/forgetpwd_editText1"
        android:layout_marginBottom="240dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:hint="@string/Login_email"
        android:gravity="center" />
    <Button
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:text="確認"
        android:id="@+id/forgetpwd_button1"
        android:textColor="#ffffffff"
        android:background="#ffff3f2f"
        android:layout_marginBottom="46dp"
        android:onClick="Account_check"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="25dp"
        android:textStyle="bold"
        android:typeface="serif" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="請輸入您的帳號，我們將會鎖定您的帳號並寄送您的新密碼至您的信箱。"
        android:id="@+id/forgetpwd_textView1"
        android:layout_above="@+id/forgetpwd_editText1"
        android:layout_marginBottom="40dp"
        android:layout_centerHorizontal="true"
        android:textColor="#ff000000" />
</RelativeLayout>