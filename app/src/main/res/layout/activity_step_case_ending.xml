<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.kelly.mysop.StepCaseEnding"
    android:background="#ffffffff">
    <Button
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:text="確認結案"
        android:id="@+id/caseclose"
        android:textColor="#ffffffff"
        android:background="#ffff3f2f"
        android:textSize="25dp"
        android:textStyle="bold"
        android:typeface="serif"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="結案確認"
        android:id="@+id/textView1"
        android:textColor="#ff000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/caseclose"
        android:layout_alignEnd="@+id/change"
        android:layout_below="@+id/change"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/l1"
            android:visibility="invisible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="1-1 請輸入..."
                android:id="@+id/endText1" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:id="@+id/l11">

                <EditText
                    android:layout_width="310dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/endEdit1"
                    android:layout_gravity="center_horizontal"
                    android:text="try" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="單位"
                    android:id="@+id/Endunit1"
                    android:layout_gravity="center"
                    android:visibility="visible" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/l2"
            android:visibility="invisible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="1-2請輸入..."
                android:id="@+id/endText2" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/l22">

                <EditText
                    android:layout_width="310dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/endEdit2"
                    android:layout_gravity="center_horizontal"
                    android:text="try" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="單位"
                    android:id="@+id/Endunit2"
                    android:layout_gravity="center" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/l3"
            android:visibility="invisible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="1-3請輸入..."
                android:id="@+id/endText3" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/l33">

                <EditText
                    android:layout_width="310dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/endEdit3"
                    android:text="try" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="單位"
                    android:id="@+id/Endunit3"
                    android:layout_gravity="center" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/l4"
            android:visibility="invisible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="1-4請輸入..."
                android:id="@+id/endText4" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:id="@+id/l44">

                <EditText
                    android:layout_width="310dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/endEdit4"
                    android:layout_gravity="center_horizontal"
                    android:text="try" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="單位"
                    android:id="@+id/Endunit4" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/l5"
            android:visibility="invisible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="1-5請輸入..."
                android:id="@+id/endText5" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/l55">

                <EditText
                    android:layout_width="310dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/endEdit5"
                    android:layout_gravity="center_horizontal"
                    android:text="try" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="單位"
                    android:id="@+id/Endunit5" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="更改"
        android:id="@+id/change"
        android:layout_alignParentEnd="true"
        android:background="#ffff3f2f"
        android:textColor="#ffffffff"
        android:textSize="20dp"
        android:layout_below="@+id/textView1"
        android:onClick="endChange" />

</RelativeLayout>
