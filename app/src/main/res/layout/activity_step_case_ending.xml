<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.kelly.mysop.StepCaseEnding"
    android:background="#ffffffff">
    <Button
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:text="確認結案"
        android:id="@+id/caseclose"
        android:textColor="#ffffffff"
        android:background="#ffff3f2f"
        android:textSize="25dp"
        android:textStyle="bold"
        android:typeface="serif"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="結案確認"
        android:id="@+id/textView1"
        android:textColor="#ff000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Title"
        android:id="@+id/endTitle"
        android:textColor="#7e7e7e"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView1" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/caseclose"
        android:layout_alignEnd="@+id/change"
        android:layout_below="@+id/change"
        android:layout_alignParentStart="true">

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listView" />
    </LinearLayout>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="更改"
        android:id="@+id/change"
        android:layout_below="@+id/endTitle"
        android:layout_alignParentEnd="true"
        android:background="#ffff3f2f"
        android:textColor="#ffffffff"
        android:textSize="20dp" />

</RelativeLayout>
