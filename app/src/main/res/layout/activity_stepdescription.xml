<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.example.kelly.mysop.Stepdescription"
    android:background="#ffffff" android:id="@+id/des_relative">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Step"
        android:id="@+id/des_textView1"
        android:textColor="#ff000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="1"
        android:id="@+id/des_textView2"
        android:textColor="#ff000000"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/des_textView1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="步驟名稱："
        android:id="@+id/des_textView3"
        android:layout_below="@+id/des_textView1"
        android:layout_marginTop="50dp"
        android:layout_alignParentLeft="true"
        android:textColor="#7e7e7e" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="ｘｘｘ"
        android:id="@+id/des_textView4"
        android:layout_below="@+id/des_textView1"
        android:layout_marginTop="50dp"
        android:layout_toEndOf="@id/des_textView3"
        android:textColor="#7e7e7e" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="步驟主旨："
        android:id="@+id/des_textView5"
        android:layout_below="@+id/des_textView3"
        android:layout_marginTop="40dp"
        android:layout_alignParentLeft="true"
        android:textColor="#7e7e7e" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="ｘｘｘ"
        android:id="@+id/des_textView6"
        android:layout_below="@+id/des_textView3"
        android:layout_marginTop="40dp"
        android:layout_toEndOf="@id/des_textView5"
        android:textColor="#7e7e7e" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="步驟說明："
        android:id="@+id/des_textView7"
        android:layout_below="@+id/des_textView5"
        android:layout_marginTop="40dp"
        android:layout_alignParentLeft="true"
        android:textColor="#7e7e7e" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="ｘｘｘ"
        android:id="@+id/des_textView8"
        android:layout_below="@+id/des_textView5"
        android:layout_marginTop="40dp"
        android:layout_toEndOf="@id/des_textView7"
        android:textColor="#7e7e7e" />

</RelativeLayout>
